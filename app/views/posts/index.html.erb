<h1 style="color: blue">Записи дневника соревнований:</h1>
<hr>

<% @posts.each do |post| %>
<h3><%= link_to post.title, post %></h3>

<strong>Автор:</strong> <span style="color:red"><%= post.name %></span>, <strong>Дата:</strong> <%= post.publishdate %>
<br>

<div class="content">
  <h3>Задания на день</h3> 
    <%= raw textilize(post.tasks) %>

  <h3>Рефлексия</h3> 
    <%= raw textilize(post.reflection) %>

  <h3>Проявления ЭГО</h3> 
    <%= raw textilize(post.ego) %>

  <h3>Рацпредложения</h3> 
<%= raw textilize(post.efficiences) %>

</div>

<div class="resulttable">
 <table border=1>
  <tr>
    <th>Переговоры</th>
    <th>Правильные перегов.</th>
    <th>Рацпредложения</th>
    <th>Внедрен. рацпр.</th>
    <th>Хронометраж</th>
    <th>Золотой час</th>
    <th>Проснулся</th>
    <th>Лег спать</th>
  </tr>

  <tr>
    <td><%= post.negotiations %></td>
    <td><%= post.correctnegotiations %></td>
    <td><%= post.efficiencies %></td>
    <td><%= post.embeddedefficiencies %></td>
    <td><%= post.chronometry %></td>
    <td><%= post.goldhour %></td>
    <td><%= "#{post.wakeuptime.hour}:#{post.wakeuptime.min}" %></td>
    <td><%= "#{post.gosleeptime.hour}:#{post.gosleeptime.min}" %> </td>
  </tr>
 </table>
</div> <!--resulttable-->

<h3>Час искренности</h3><%= post.sincerityhour %>
    <div style="float:right">
      <%= link_to 'Показать', post %>
      <%= link_to 'Редактировать', edit_post_path(post) %>
      <%= link_to 'Удалить', post, :confirm => 'Вы уверенны, удаляем ?', :method => :delete %>
    </div>
    <hr class="list">
<% end %>

<br />
<%= link_to 'Добавить запись', new_post_path %> <a href="/"> Главная </a>
